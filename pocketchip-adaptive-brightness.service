[Unit]
Description=PocketCHIP Adaptive Brightness

[Service]
ExecStart=/path/to/pocketchip-adaptive-brightness/index.js
Restart=always
User=root
Group=root
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/opt/adaptivebrightness

[Install]
WantedBy=multi-user.target
